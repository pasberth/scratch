gh-pages/widkim.svg: languages/widkim.jade
  jade < languages/widkim.jade > gh-pages/widkim.svg

gh-pages/widkim.eot: bin/fontconv gh-pages/widkim.svg
  ./bin/fontconv -k "$(MASHAPE_KEY)" -d gh-pages -f eot gh-pages/widkim.svg

gh-pages/widkim.ttf: bin/fontconv gh-pages/widkim.svg
  ./bin/fontconv -k "$(MASHAPE_KEY)" -d gh-pages -f ttf gh-pages/widkim.svg

gh-pages/widkim.woff: bin/fontconv gh-pages/widkim.svg
  ./bin/fontconv -k "$(MASHAPE_KEY)" -d gh-pages -f woff gh-pages/widkim.svg

gh-pages/languages.html: languages/example.adoc languages/example-docinfo.html
  asciidoctor languages/example.adoc -o gh-pages/languages.html

gh-pages/rounsic.html: completion/rounsic.adoc completion/rounsic-docinfo.html
  ruby -rasciidoctor-html5ruby -S asciidoctor completion/rounsic.adoc -o gh-pages/rounsic.html

bin/fontconv: $(glob .vendor/fontconv/*)
  cd .vendor/fontconv && $(CABAL_DEV) install
  mkdir bin
  cp .vendor/fontconv/cabal-dev/bin/fontconv bin/fontconv